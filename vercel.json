{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api/|_next/|static/|assets/|favicon.ico).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/**/*.ts": {
            "includeFiles": "api/_lib/**/*"
        },
        "api/**/*.js": {
            "includeFiles": "api/_lib/**/*"
        }
    }
}